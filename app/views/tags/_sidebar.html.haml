.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      - if login?
        %li= link_to "Post new item", new_item_path, class: "btn"
        %li.divider

      %li.nav-header= @tag.name
      %li= link_to "#{@tag.items.count} items", @tag
      %li= link_to "#{@tag.users.count} followers", :tag_followers
      %li.divider
      - if login?
        - if @tag.users.include? current_user
          %li= link_to "Following", "#", class: "btn disabled btn-success"
        - else
          %li= link_to "Follow", :tag_follow, remote: true, class: "btn", id: "action-btn"
