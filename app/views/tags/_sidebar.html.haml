.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      - if login?
        = link_to new_item_path, class: "btn" do
          %li
            %i.icon-edit
            %span Post new one
        %li.divider

      %li.nav-header= @tag.name
      %li= link_to "#{@tag.items.count} items", @tag
      %li= link_to "#{@tag.users.count} followers", :tag_followers
      %li.divider
      - if login? && !current_user.following?(@tag)
        %li= link_to "Follow", :tag_follow, remote: true, class: "btn", id: "action-btn"
