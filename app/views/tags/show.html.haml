- content_for :sidebar do
  = render partial: "sidebar"

.alert.fade.in#notice-area{style: "display: none"}
  %button.close{data: {dismiss: "alert"}} &times;

.page-header
  %h1
    %span= @tag.name
    - if login? && current_user.following?(@tag)
      %span.label.label-success following

= render partial: "share/item_header", collection: @tag.items, spacer_template: "share/item_spacer"
