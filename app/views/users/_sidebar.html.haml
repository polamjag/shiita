.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      - if login?
        = link_to new_item_path, class: "btn btn-success btn-block" do
          %li
            %i.icon-edit
            %span New item
        %li.divider

      %li.nav-header= user.name
      %li= link_to user.email, user
      %li= link_to "#{user.items.count} items", user

      %li.nav-header Relations
      %li= link_to "#{user.followings.count} followings", :user_followings
      %li= link_to "#{user.followers.count} followers", :user_followers
      %li.divider

      %li.nav-header Stocks
      %li= link_to "#{user.stocks.count} items stocked", :user_stocks
      %li.divider

      %li.nav-header Following tags
      - user.tags.each do |tag|
        %li= link_to tag.name, tag

      - if login? && current_user != user && !current_user.following?(user)
        %li.divider
        =link_to :user_follow, remote: true, class: "btn btn-block", id: "action-btn" do
          %li
            %i.icon-plus
            %span Follow
