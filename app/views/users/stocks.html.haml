- content_for :sidebar do
  = render partial: "sidebar", locals: {user: @user}

.alert.fade.in#notice-area{style: "display: none"}
  %button.close{data: {dismiss: "alert"}} &times;

.page-header
  %h1
    %span= login? && @user == current_user ? "Your stocks" : "Stocks"
    %small= @user.email

= render partial: "share/item_header", collection: @stocks, spacer_template: "share/item_spacer"

= paginate @stocks
