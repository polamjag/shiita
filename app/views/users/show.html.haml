- content_for :sidebar do
  = render partial: "sidebar", locals: {user: @user}

.alert.fade.in#notice-area{style: "display: none"}
  %button.close{data: {dismiss: "alert"}} &times;

.page-header
  %h1
    - if login? && current_user == @user
      %span.label.label-info you
    %span= @user.name
    %small= @user.email

= render partial: "share/item_header", collection: @user.items, spacer_template: "share/item_spacer"
