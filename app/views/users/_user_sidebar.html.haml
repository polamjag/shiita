.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      %li.nav-header= link_to "User Info", user
      %li= user.email
      %li= user.name
      %li= "#{user.items.count} items"
      %li= "#{user.followings.count} followings"
      %li= "#{user.followers.count} followers"
      %li.divider

      %li.nav-header= link_to "Stocks info", :user_stocks
      %li #{user.stocks.count} items stocked
      %li.divider

      - if login? && current_user != user && !(current_user.followings.include?(user))
        %li= link_to "Follow", :user_follow, remote: true, class: "btn", id: "action-btn"
